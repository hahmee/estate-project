#!/bin/sh
ssh ubuntu@$EC2_HOST <<EOF
    # 프로젝트 디렉토리로 이동
    cd ~/estate-project

    # 최신 코드 가져오기
    git pull

    # Node.js 설정
    curl -o- https://raw.githubusercontent.com/creationix/nvm/v0.33.8/install.sh | bash
    . ~/.nvm/nvm.sh
    nvm install 18.17.0

    # client 폴더에서 빌드
    cd client
    npm install
    npm run build

    cd ..

    # api 폴더에서 의존성 설치 및 서버 재시작
    cd api
    npm install
    npm install -g pm2
    pm2 restart app.js

    exit
EOF
